join:
    inner join -> join
    right outer join -> right join
    left outer join  -> left join
    full join
    cross join




select count() from
table1 <-> table2

select table1.col , table2.col , count(table2.col) from table1
left join table2 on table1.id = table2.table1_id
group by table1.id;


